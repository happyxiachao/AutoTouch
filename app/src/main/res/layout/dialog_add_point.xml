<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77000000"
    android:padding="20dp"
    android:id="@+id/layout_content">


    <TextView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/tv_title"
        android:textSize="30sp"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="200dp"
        android:text="添加关键词"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_hint"
        android:alpha="0.6"
        android:textSize="30sp"
        android:textColor="#fff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="点击屏幕任意位置记录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

<!--    <androidx.constraintlayout.widget.Group-->
<!--        tools:visibility="visible"-->
<!--        android:visibility="gone"-->
<!--        android:id="@+id/gl_input"-->
<!--        app:constraint_referenced_ids="bt_commit,bt_cancel,et_name,et_time,tv_title"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content" />-->



    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/et_name"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:hint="输入自动识别关键词"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="@+id/tv_title"
        android:layout_width="300dp"
        android:layout_height="80dp" />

    <EditText
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_name"
        app:layout_constraintBottom_toTopOf="@id/bt_commit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/et_time"
        android:textSize="20sp"
        android:hint="点击间隔时间(单位/秒)"
        android:inputType="number"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_commit"
        android:textSize="22sp"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintLeft_toLeftOf="@+id/et_name"
        app:layout_constraintRight_toLeftOf="@+id/bt_cancel"
        android:text="保存"
        android:layout_width="0dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/bt_cancel"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@+id/bt_commit"
        app:layout_constraintTop_toBottomOf="@+id/et_name"
        app:layout_constraintRight_toRightOf="@+id/et_name"
        android:text="取消"
        android:layout_width="0dp"
        android:layout_height="50dp" />


</androidx.constraintlayout.widget.ConstraintLayout>